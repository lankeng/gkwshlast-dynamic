.findbook {
  width: 100%;
  padding-top: 100rpx;
}

.fb-logo {
  width: 200rpx;
  height: 200rpx;
  margin: auto;
}

.fb-search {
  width: 680rpx;
  height: 80rpx;
  margin: auto;
  display: block;
  border: 2rpx solid #f2f2f2;
  box-shadow: 6rpx 6rpx 20rpx #004CA0;
  margin-top: 60rpx;
}

.search-img {
  width: 30rpx;
  height: 30rpx;
  margin: auto;
  position: relative;
  top: 5rpx;
}

.search-imgall {
  width: 12%;
  height: 80rpx;
  display: inline-block;
  line-height: 80rpx;
}

.search-ipt {
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-block;
}

.search-close {
  width: 8%;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-block;
  position: relative;
  top: 5rpx;
}

.sclo-img {
  width: 30rpx;
  height: 30rpx;
  margin: auto;
  display: inline-block;
}

.sclo-imga {
  opacity: 0;
  width: 30rpx;
  height: 30rpx;
  margin: auto;
}

.placeholdercla {
  font-size: 30rpx;
  color: #cacaca;
}

.search-btn {
  width: 20%;
  display: inline-block;
  height: 85rpx;
  background-color: #004CA0;
  border-radius: 0;
  line-height: 80rpx;
  color: #fff;
  font-size: 30rpx;
  position: relative;
  top: -4rpx;
  left: 5rpx;
}

.fb-warn {
  width: 600rpx;
  height: 350rpx;
  background-color: #004CA0;
  border-radius: 10rpx;
  box-shadow: 6rpx 6rpx 20rpx #004CA0;
  margin: auto;
  margin-top: 200rpx;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}

.warn-title {
  font-size: 36rpx;
  color: #fff;
  text-align: center;
}

.warn-text {
  font-size: 30rpx;
  color: #fff;
  width: 90%;
  margin: auto;
  margin-top: 10rpx;
}

.warn-text:nth-child(2) {
  margin-top: 20rpx;
}

.wate-time {
  margin-left: 30rpx;
}

.wate-timeb {
  margin-left: 15rpx;
}
