.grade {
  width: 100%;
}

.grade-year {
  width: 100%;
  height: 60rpx;
  background-color: #fafafa;
  text-align: center;
  font-size: 30rpx;
  line-height: 60rpx;
}

.grade-tab {
  width: 100%;
}

.gtab-title {
  width: 100%;
  height: 80rpx;
  background-color: #fafbff;
  display: table;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #4e91bf;
  border-top: 1rpx solid #e6ebee;
  border-bottom: 1rpx solid #e6ebee;
}

.gbtitle-left {
  width: 80%;
  display: table-cell;
}

.gbtitle-right {
  width: 20%;
  display: table-cell;
  text-align: center;
}

.gtitle-text {
  margin-left: 30rpx;
}

.navigator-box {
  opacity: 0;
  position: relative;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 34rpx;
  transform: translateY(-50%);
  transition: 0.3s;
}

.navigator-box-show {
  opacity: 1;
  transform: translateY(0);
}

.navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px;
  border-top: 1rpx solid #d8d8d8;
  color: #d8d8d8;
}

.navigator:first-child:before {
  display: none;
}

.navigator-text {
  flex: 1;
}

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}

.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

.kind-list-item {
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 4rpx;
  overflow: hidden;
  clear: both;
  box-shadow: 0rpx 2rpx 2rpx #ebebeb;
}

.kind-list-item:last-child {
  border-bottom: none;
}

.kind-list-item:first-child {
  margin-top: 0;
}

.kind-list-text {
  width: 86%;
  font-size: 32rpx;
}

.kind-list-img {
  width: 60rpx;
  height: 60rpx;
}

.kind-list-item-hd {
  padding: 30rpx;
  display: flex;
  align-items: center;
  transition: opacity 0.3s;
}

.kind-list-item-hd-show {
  opacity: 0.2;
}

.kind-list-item-bd {
  height: 0;
  overflow: hidden;
}

.kind-list-item-bd-show {
  height: auto;
}

.gtabcon-row {
  width: 75%;
  margin: auto;
  color: #292929;
  font-size: 30rpx;
  line-height: 50rpx;
}

.row-bac {
  width: 100%;
  background-color: #f7f7f7;
  padding: 20rpx 0;
}

.kind-list-grade {
  width: 14%;
  text-align: center;
  font-size: 32rpx;
  color: #9f9f9f;
}

.kind-list-text-img {
  width: 0;
  height: 0;
  border-width: 15rpx 0 15rpx 15rpx;
  border-style: solid;
  border-color: transparent transparent transparent #333; /*透明 透明 透明 灰*/
  position: relative;
  float: left;
  top: 8rpx;
  margin-right: 15rpx;
}

.kind-list-text-img-down {
  width: 0;
  height: 0;
  border-width: 15rpx 15rpx 0;
  border-style: solid;
  border-color: #333 transparent transparent; /*透明 透明 透明 灰*/
  position: relative;
  float: left;
  top: 15rpx;
  margin-right: 15rpx;
}

.sel-down {
  width: 0;
  height: 0;
  border-width: 12rpx 12rpx 0;
  border-style: solid;
  border-color: #333 transparent transparent; /*灰 透明 透明 */
  position: relative;
  display: inline-block;
  top: -6rpx;
  margin-left: 20rpx;
}
.sel-picker {
  display: inline-block;
  font-size: 30rpx;
  position: relative;
  top: -2rpx;
  color: #333;
}