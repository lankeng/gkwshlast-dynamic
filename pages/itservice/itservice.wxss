.property {
  width: 100%;
  padding-bottom: 100rpx;
}

.pro-btn {
  width: 100%;
  height: 50rpx;
  padding: 30rpx 0rpx;
}

.probtn-con {
  width: 150rpx;
  height: 50rpx;
  background-color: #e3eeff;
  font-size: 30rpx;
  text-align: center;
  line-height: 50rpx;
  float: right;
  position: relative;
  right: 50rpx;
  color: #1e7977;
}

.pro-tab {
  padding: 0rpx 50rpx;
  text-align: center;
  font-size: 30rpx;
}

.protle-instructions {
  width: 50%;
  float: left;
  font-weight: bold;
}

.protle-state {
  width: 25%;
  float: left;
  font-weight: bold;
}

.protle-operation {
  width: 25%;
  float: left;
  font-weight: bold;
}

.protab-title {
  background-color: #ebebeb;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}

.protab-row {
  width: 100%;
  clear: both;
  border-bottom: 1rpx solid #ebebeb;
  display: table;
  padding: 30rpx 0rpx;
}

.protab-row:last-child {
  border-bottom: none;
}

.row-instructions {
  width: 50%;
  text-align: left;
  display: table-cell;
  vertical-align: middle;
}

.row-state {
  width: 25%;
  display: table-cell;
  vertical-align: middle;
  text-align: center;
}

.row-operation {
  width: 25%;
  color: #5847f4;
  display: table-cell;
  vertical-align: middle;
  text-align: center;
}

.operation-comments {
  margin-top: 5rpx;
}
